% symbols and commands

%%% logic operators
\newcommand\ivee{\mathrel{\rotatebox[origin=c]{270}{$\geqslant$}}}
% \newcommand*\bigivee{\scalebox{1.8}{$\ivee$}}
\newcommand*\bigivee{{\boldsymbol{\raisebox{-.85pt}{\rotatebox{-2}{\scaleobj{1.375}{\backslash}}}}\mkern-13mu\bigvee}}
%\DeclareMathOperator\bigivee{\rotatebox[origin=c]{270}{\scalebox{2}{$\geqslant$}}}
\newcommand\iexists{\overline{\exists}}

%%% logics, languages and signatures
\newcommand\fol{\mathtt{FO}}
\newcommand\langFol{\mathcal{L}_{\fol}}

\newcommand\cqc{\mathtt{CQC}}
\newcommand\langCqc{\mathcal{L}_{\cqc}}

\newcommand\inqB{\mathtt{InqB}}
\newcommand\langInqB{\mathcal{L}_{\inqB}}

\newcommand\inqBQ{\mathtt{InqBQ}}
\newcommand\langInqBQ{\mathcal{L}_{\inqBQ}}

\newcommand\hinqBQ{\mathcal{H}\inqBQ}

\newcommand\langInqBQms{\mathcal{L}_{\iexists}}
\newcommand\langInqBQma{\mathcal{L}_{\forall}}

%%% models
\newcommand*\modelInqBQ[1]{ \mathcal{ #1 } }

%%% model constructions
\newcommand\ioplus{ \oplus }			% direct sum
\newcommand\bigioplus{ \bigoplus }
\newcommand\iuplus{ \uplus }			% disjoint union
\newcommand\bigiuplus{ \biguplus }
\newcommand\iprod{ \prod }			% product
\newcommand\omegaModel[1]{ {#1}_{\omega} }		% omega model
\newcommand\blowUp[1]{ \mathcal{B}#1 }			% blowUp model
\newcommand\blowUpTerm[1]{ \underline{#1} }
\newcommand\permModel[2]{ \mathcal{B}_{#2}#1 }		% permutation model
\newcommand\fullPermModel[1]{\mathfrak{S}#1}	% full permutation model




