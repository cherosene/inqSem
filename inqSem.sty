% Required packages
\RequirePackage{amssymb}
\RequirePackage{amsmath}
\RequirePackage{tikz}



% symbols and commands

%%% logic operators
\DeclareMathOperator\ivee{\mathrel{\rotatebox[origin=c]{270}{$\geqslant$}}}
\DeclareMathOperator*\bigivee{\scalebox{1.8}{$\ivee$}}
%\DeclareMathOperator\bigivee{\rotatebox[origin=c]{270}{\scalebox{2}{$\geqslant$}}}
\DeclareMathOperator\iexists{\overline{\exists}}

%%% logics, languages and signatures
\DeclareMathOperator\fol{\mathtt{FOL}}
\DeclareMathOperator\langFol{\mathcal{L}_{\fol}}

\DeclareMathOperator\inqB{\mathtt{InqB}}
\DeclareMathOperator\langInqB{\mathcal{L}_{\inqB}}

\DeclareMathOperator\inqBQ{\mathtt{InqBQ}}
\DeclareMathOperator\langInqBQ{\mathcal{L}_{\inqBQ}}

\DeclareMathOperator\langInqBQms{\mathcal{L}_{\iexists}}
\DeclareMathOperator\langInqBQma{\mathcal{L}_{\forall}}

%%% models
\newcommand*\modelInqBQ[1]{ \mathcal{ #1 } }

%%% model constructions
\DeclareMathOperator\ioplus{ \oplus }			% direct sum
\DeclareMathOperator\bigioplus{ \bigoplus }
\DeclareMathOperator\iuplus{ \uplus }			% disjoint union
\DeclareMathOperator\bigiuplus{ \biguplus }
\newcommand\omegaModel[1]{ {#1}_{\omega} }		% omega model
\newcommand\blowUp[1]{ \mathcal{B}#1 }			% blowUp model
\newcommand\blowUpTerm[1]{ \underline{#1} }
\newcommand\permModel[2]{ \mathcal{B}_{#2}#1 }		% permutation model
\newcommand\fullPermModel[1]{\mathfrak{S}#1}	% full permutation model




